  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Launch with AWS Credentials",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "eval $(aws-sso eval  --account ACCOUNT_ID --role AdministratorAccess) && npm run start"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon",
      "args": ["--ignore", "src/compiledSpecValidation.json", "${workspaceFolder}/make.js", "run"],
      "cwd": "${workspaceFolder}/src/"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "npm test"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug Handle Migration/Deletion",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "eval $(aws-sso eval  --account ACCOUNT_ID --role AdministratorAccess) && npm run handle"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Validate",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon",
      "args": ["${workspaceFolder}/make.js", "validate"],
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Debug Validate with AWS Credentials",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "command": "eval $(aws-sso eval  --account ACCOUNT_ID --role AdministratorAccess) && npx nodemon make.js validate"
    },
  ]
}
